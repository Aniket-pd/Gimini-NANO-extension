{
    "manifest_version": 3,
    "name": "Text Selection Button",
    "version": "1.0",
    "description": "Shows a button near selected text.",
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"],
    // "background": {
    //   "service_worker": "background.js"
    // },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  