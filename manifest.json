{
  "manifest_version": 3,
  "name": "Text Selection Button",
  "version": "1.0",
  "description": "Shows a button near selected text.",
  "permissions": ["activeTab", "scripting", "storage", "aiOriginTrial"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "origin_trial": {
    "token": "YOUR_ORIGIN_TRIAL_TOKEN"
  }
}
